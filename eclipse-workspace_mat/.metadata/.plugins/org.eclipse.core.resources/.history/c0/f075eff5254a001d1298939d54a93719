package com.main;

import java.util.Scanner;

public class patterns {

	public static void main(String[] args) {

		Scanner scanner = new Scanner(System.in);
		System.out.println("Enter the required pattern");
		int n = scanner.nextInt();

		switch (n) {
		case 1:
			// Right angle num increasing pattern
			System.out.println("Enter the number");
			int num1 = scanner.nextInt();
			int temp = 1;
			for (int i = 0; i < num1; i++) {
				for (int j = i; j < num1; j++) {
					System.out.print(" ");
				}
				for (int j = 0; j <= i; j++) {
					System.out.print(temp);
				}
				temp++;
				System.out.println();
			}
			break;

		case 2:
			// Star Diamond pattern
			System.out.println("Enter the number");
			int num2 = scanner.nextInt();
			for (int i = 0; i < num2; i++) {
				for (int j = i; j < num2; j++) {
					System.out.print(" ");
				}
				for (int j = 0; j <= i; j++) {
					System.out.print("* ");
				}
				System.out.println();
			}
			for (int i = num2 - 1; i >= 0; i--) {
				for (int j = num2; j >= i; j--) {
					System.out.print(" ");
				}
				for (int j = i - 1; j >= 0; j--) {
					System.out.print("* ");
				}
				System.out.println();
			}
			break;

		case 3:
			// Diamond pattern using numbers
			System.out.println("Enter the number");
			int num3 = scanner.nextInt();
			int dummy = 1;
			int dup = num3 - 1;
			for (int i = 0; i < num3; i++) {
				for (int j = i; j < num3; j++) {
					System.out.print(" ");
				}
				for (int j = 0; j <= i; j++) {
					System.out.print(dummy + " ");
				}
				dummy++;
				System.out.println();
			}
			for (int i = num3 - 1; i >= 0; i--) {
				for (int j = num3; j >= i; j--) {
					System.out.print(" ");
				}
				for (int j = i - 1; j >= 0; j--) {
					System.out.print(dup + " ");
				}
				dup--;
				System.out.println();
				break;
			}
		case 4:
			System.out.println("Enter the number");
			int num4 = scanner.nextInt();
			int tem = num4;
			for (int i = num4; i > 0; i--) {
				for (int j = num4; j >= i; j--) {
					System.out.print("");
				}
				for (int j = i - 1; j >= 0; j--) {
					System.out.print(tem + " ");
				}
				tem--;
				System.out.println();
			}
			for (int i = 2; i <= num4; i++) {
				for (int j = i; j < num4; j++) {
					System.out.print("");
				}
				for (int j = 0; j < i; j++) {
					System.out.print(i + " ");
				}
				System.out.println();				
			}
			break;
		case 5:
			System.out.println("Enter the number");
			int add = scanner.nextInt();
			int sum = 0;
			for (int i = 1; i <= add; i++) {
				sum = sum + i;
			}
			System.out.println(sum);
			break;

		case 6:
			
		}
		scanner.close();
	}
}